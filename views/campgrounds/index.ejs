<%- include ("../partials/header") %>

<div class="container">
  <header class="jumbotron">
    <h1>Welcome to Yelp Camp</h1>
    <p>View our handpicked campgrounds, from all over the world.</p>
    <p>
      <a class="btn btn-primary btn-large" href="/campgrounds/new">Add a new Campground</a>
    </p>
  </header>

  <div class="row">
    <div class="col-lg-12">
      <h3>Our Most Popular Campgrounds</h3>
    </div>
  </div>

  <div class="row" style="display:flex; flex-wrap: wrap;">
  <% for(var i = 0; i < campgrounds.length; i++) {%>
      <div class="col-lg-4">
        <div class="img-thumbnail">
          <img src="<%= campgrounds[i]["img"]; %>">
          <caption><h4><%= campgrounds[i]["name"]; %></h4></caption>
          <p><a href="/campgrounds/<%= campgrounds[i]["_id"]; %>" class="btn btn-primary">More Info</a></p>
        </div>
      </div>
    <% } %>
  </div>


  </div>


  <%- include ("../partials/footer") %>
